{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint:format": "prettier -l \"**/*.{js,jsx,ts,tsx,json,html,css,scss,md,mdx,yml,yaml}\"",
    "fix:format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,html,css,scss,md,mdx,yml,yaml}\""
  },
  "devDependencies": {
    "prettier": "^2.0.4"
  },
  "dependenciesMeta": {
    "core-js": {
      "built": false
    },
    "core-js-pure": {
      "built": false
    },
    "fsevents": {
      "built": false
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
